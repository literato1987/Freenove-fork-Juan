from gpiozero import RGBLED
import time

# Configuración de los pines para el RGB LED
led = RGBLED(red=17, green=18, blue=27, active_high=False)

def setColor(r_val, g_val, b_val):      # Cambiar el ciclo de trabajo para los tres pines
    led.red = r_val / 100                 # Cambiar el ciclo PWM para el rojo
    led.green = g_val / 100               # Cambiar el ciclo PWM para el verde
    led.blue = b_val / 100                # Cambiar el ciclo PWM para el azul

if __name__ == '__main__':  # Entrada del programa
    print('Program is starting ... ')
    
    # Establecer el color estático
    r = 50  # Rojo a 50%
    g = 0   # Verde apagado
    b = 100 # Azul al 100%
    setColor(r, g, b)  # Establecer color fijo con los valores definidos
    print(f'Setting color to r={r}, g={g}, b={b}')
    
    # Mantener el color durante el tiempo que desees
    # Si deseas que siga encendido indefinidamente, puedes quitar el time.sleep()
    time.sleep(62000)  # Mantener el color durante 10 segundos (opcional)
    
    print("Ending program")
